<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.chinmayee.visafamilyplan.AddMember">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textSize="20dp"
        android:lines="2"
        android:textColor="#000000"
        android:text="Add Member"
        android:id="@+id/add_member_title"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_member_title"
        android:text="First Name:"
        android:id="@+id/first_name_label"
        android:textStyle="bold"
        android:layout_marginTop="15dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="13dp"
        android:id="@+id/first_name"
        android:layout_toRightOf="@+id/first_name_label"
        android:layout_below="@+id/add_member_title"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/first_name_label"
        android:text="Last Name:"
        android:id="@+id/last_name_label"
        android:textStyle="bold"
        android:layout_marginTop="25dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:layout_marginTop="10dp"
        android:id="@+id/last_name"
        android:layout_toRightOf="@+id/last_name_label"
        android:layout_below="@+id/first_name"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/last_name_label"
        android:text="Email Address:"
        android:id="@+id/email_addr_label"
        android:textStyle="bold"
        android:layout_marginTop="25dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:layout_marginTop="10dp"
        android:id="@+id/email_addr"
        android:layout_toRightOf="@+id/email_addr_label"
        android:layout_below="@+id/last_name"
        />

    <Button android:id="@+id/save_member" style="?android:textAppearanceSmall"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_marginTop="56dp" android:text="Submit"
        android:layout_below="@+id/email_addr_label"
        android:textStyle="bold" />



</RelativeLayout>
